<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/cinza_escuro">

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cinza_escuro"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prod_ultima_acao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Produto"
                android:hint="Devolução"
                android:textColor="@color/white"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tipo_ultima_acao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_below="@id/prod_ultima_acao"
                android:hint="Devolução"
                android:textAlignment="center"
                android:textColor="@color/hints"
                android:textColorHint="@color/hints"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/qtd_ultima_acao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/prod_ultima_acao"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/tipo_ultima_acao"
                android:hint="10000"
                android:textAlignment="center"
                android:textColor="@color/hints"
                android:textColorHint="@color/hints"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/data_ultima_acao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/prod_ultima_acao"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/qtd_ultima_acao"
                android:hint="dd/MM/yyyy"
                android:textAlignment="center"
                android:textColor="@color/hints"
                android:textColorHint="@color/hints"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hora_ultima_acao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/prod_ultima_acao"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/data_ultima_acao"
                android:hint="hh:mm:ss"
                android:textAlignment="center"
                android:textColor="@color/hints"
                android:textColorHint="@color/hints"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status_ultima_acao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/prod_ultima_acao"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/hora_ultima_acao"
                android:hint="Devolvido"
                android:textAlignment="center"
                android:textColor="@color/hints"
                android:textColorHint="@color/hints"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>