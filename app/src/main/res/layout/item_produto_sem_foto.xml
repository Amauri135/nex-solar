<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#00000000"
    tools:ShowIn="true"
    android:id="@+id/item_produto_sem_foto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#171717">

            <TextView
                android:id="@+id/textViewDescricaoProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#FAAB00"
                android:text="Produto"
                android:layout_marginBottom="17dp"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewQtdAtualLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewDescricaoProduto"
                android:text="• Quantidade atual: "
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textViewQtdAtual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewDescricaoProduto"
                android:layout_alignParentEnd="true"
                android:gravity="right"
                android:text="Qtd Atual"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textViewQtdInicialLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewQtdAtualLabel"
                android:text="• Quantidade inicial: "
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:layout_alignParentEnd="true"
                android:layout_below="@id/textViewQtdAtual"
                android:id="@+id/textViewQtdInicial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Qtd Inicial"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </RelativeLayout>
</androidx.cardview.widget.CardView>