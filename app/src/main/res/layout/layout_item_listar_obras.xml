<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="5dp" >

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewListarObras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cinza_escuro"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/obra_listar_obras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Obra"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_endereco_listar_obras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="left"
                        android:text="Endereço"
                        android:textColor="@color/hints"
                        android:textColorHint="@color/cinza_escuro"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_cidade_listar_obras"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="left"
                        android:text="Cidade"
                        android:textColor="@color/hints"
                        android:textColorHint="@color/cinza_escuro"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_responsavel_listar_obras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="left"
                        android:text="Responsável"
                        android:textColor="@color/hints"
                        android:textColorHint="@color/cinza_escuro"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_data_listar_obras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="left"
                        android:text="Data do cadastro"
                        android:textColor="@color/hints"
                        android:textColorHint="@color/cinza_escuro"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_hora_listar_obras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="left"
                        android:text="Hora do cadastro"
                        android:textColor="@color/hints"
                        android:textColorHint="@color/cinza_escuro"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_cadastrada_por_listar_obras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="left"
                        android:text="Cadastrada por"
                        android:textColor="@color/hints"
                        android:textColorHint="@color/cinza_escuro"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/endereco_listar_obras"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Endereço"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/cidade_listar_obras"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Cidade"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/responsavel_listar_obras"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Responsável"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/data_listar_obras"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Data"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/hora_listar_obras"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Hora"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/cadastrada_por_listar_obras"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Cadastrada por"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnAlterarObra"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/amarelo"
                    android:background="@drawable/ic_baseline_edit_24" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>