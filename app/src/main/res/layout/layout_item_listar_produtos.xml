<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="5dp" >

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewListarProdutos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cinza_escuro"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/prod_listar_produtos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Produto"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_categoria_listar_produtos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="left"
                        android:text="Categoria"
                        android:textColor="@color/hints"
                        android:textColorHint="@color/cinza_escuro"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_qtInicial_listar_produtos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="left"
                        android:text="Qt inicial"
                        android:textColor="@color/hints"
                        android:textColorHint="@color/cinza_escuro"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_qtAtual_listar_produtos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="left"
                        android:text="Qt atual"
                        android:textColor="@color/hints"
                        android:textColorHint="@color/cinza_escuro"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_data_listar_produtos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="left"
                        android:text="Data do cadastro"
                        android:textColor="@color/hints"
                        android:textColorHint="@color/cinza_escuro"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_hora_listar_produtos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="left"
                        android:text="Hora do cadastro"
                        android:textColor="@color/hints"
                        android:textColorHint="@color/cinza_escuro"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_cadastrado_por_listar_produtos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="left"
                        android:text="Cadastrado por"
                        android:textColor="@color/hints"
                        android:textColorHint="@color/cinza_escuro"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_obs_listar_produtos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="left"
                        android:text="Obs"
                        android:textColor="@color/hints"
                        android:textColorHint="@color/cinza_escuro"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/categoria_listar_produtos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Categoria"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/qtInicial_listar_produtos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Qt inicial"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/qtAtual_listar_produtos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Qt atual"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/data_listar_produtos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Data"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/hora_listar_produtos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Hora"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/cadastrado_por_listar_produtos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Cadastrado por"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/obs_listar_produtos"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:justificationMode="inter_word"
                        android:text="Retirei porque eu quis aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                        android:textColor="@color/white" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnVerFotos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/azul"
                    android:background="@drawable/ic_baseline_photo_library_24" />
                <ImageButton
                    android:id="@+id/btnAlterarProduto"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/amarelo"
                    android:background="@drawable/ic_baseline_edit_24" />
                <ImageButton
                    android:id="@+id/btnExcluirProduto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/vermelho"
                    android:background="@drawable/ic_baseline_delete_24" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>