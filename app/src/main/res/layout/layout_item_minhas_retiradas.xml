<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/cinza_escuro">

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/cinza_escuro"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/prod_minhas_retiradas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Produto"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_obra_minhas_retiradas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="left"
                        android:text="Obra"
                        android:textColor="@color/hints"
                        android:textColorHint="@color/cinza_escuro"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_qtRetirada_minhas_retiradas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="left"
                        android:text="Qt retirada"
                        android:textColor="@color/hints"
                        android:textColorHint="@color/cinza_escuro"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_qtDevolvida_minhas_retiradas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="left"
                        android:text="Qt devolvida"
                        android:textColor="@color/hints"
                        android:textColorHint="@color/cinza_escuro"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_data_minhas_retiradas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="left"
                        android:text="Data"
                        android:textColor="@color/hints"
                        android:textColorHint="@color/cinza_escuro"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_hora_minhas_retiradas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="left"
                        android:text="Hora"
                        android:textColor="@color/hints"
                        android:textColorHint="@color/cinza_escuro"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/label_obs_minhas_retiradas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="left"
                        android:text="Obs"
                        android:textColor="@color/hints"
                        android:textColorHint="@color/cinza_escuro"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/obra_minhas_retiradas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Obra"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/qtRetirada_minhas_retiradas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Qt retirada"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/qtDevolvida_minhas_retiradas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Qt devolvida"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/data_minhas_retiradas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Data"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/hora_minhas_retiradas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Hora"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/obs_minhas_retiradas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:text="Retirei porque eu quis aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                        android:textColor="@color/white" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>